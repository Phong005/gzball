package com.android.app.imageManager;

import java.io.File;
import java.io.FileFilter;

public class FiltreSimpleData implements FileFilter {
	   // extension acceptée par le filtre
	  
	   private FiltreSimpleData data = new FiltreSimpleData();
	//Constructeur à partir  de l'extension acceptée
	   public FiltreSimpleData(String extension){
	      if(extension ==null){
	         throw new NullPointerException("L'extension ne peut être null.");
	      }
	     
	      this.data.extension = extension;
	   }
	   //Implémentation de FileFilter
	   public boolean accept(File file){
	      if(file.isDirectory()) { 
	         return true; 
	      } 
	      String nomFichier = file.getName().toLowerCase(); 

	      return nomFichier.endsWith(data.extension);
	   }
	}